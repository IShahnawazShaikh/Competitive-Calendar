<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#fff"
    tools:context=".activity.Recover">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:id="@+id/resetText"
        android:textColor="@color/slider_head_text"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:elevation="1dp"
        android:textColorHint="#666"
        android:background="#fff"
        android:hint="Email"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_below="@+id/resetText"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"

        android:textColor="@color/slider_head_text"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:elevation="1dp"
        android:textColorHint="#666"
        android:background="#fff"
        android:hint="Password"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_below="@+id/email"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/slider_head_text"
        />
    <EditText
        android:id="@+id/cnfrmpassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:elevation="1dp"
        android:textColorHint="#666"
        android:background="#fff"
        android:hint="Confirm Password"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_below="@+id/password"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/slider_head_text"
        />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Reset"
        android:textColor="#fff"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/cnfrmpassword"
        android:background="@drawable/loginbutton"
        />
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:elevation="1dp"
        android:indeterminateTint="@color/slider_head_text"
        />
</RelativeLayout>