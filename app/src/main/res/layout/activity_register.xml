<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".activity.Register">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="top|left"
        android:background="#7d56b0">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:fontFamily="sans-serif-black"
            android:textColor="#fff"
            android:id="@+id/AppName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="18dp"/>

    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="70dp"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/login_space"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:padding="10dp"
            android:background="@drawable/layout_round"
            android:layout_marginTop="10dp" >
            <TextView
                android:id="@+id/registerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:hint="Display Name"
                android:textSize="12dp"
                android:textStyle="bold"
                android:elevation="1dp"
                android:textColorHint="#666"
                android:background="#fff"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:layout_below="@+id/registerText"
                android:textColor="@color/slider_head_text"
                />
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:elevation="1dp"
                android:textColorHint="#666"
                android:background="#fff"
                android:hint="Email"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_below="@+id/name"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"

                android:textColor="@color/slider_head_text"
                />
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:elevation="1dp"
                android:textColorHint="#666"
                android:background="#fff"
                android:hint="Password"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_below="@+id/email"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/slider_head_text"
                />
            <EditText
                android:id="@+id/cnfrmpassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:elevation="1dp"
                android:textColorHint="#666"
                android:background="#fff"
                android:hint="Confirm Password"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_below="@+id/password"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/slider_head_text"
                />
            <EditText
                android:id="@+id/institute"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:elevation="1dp"
                android:textColorHint="#666"
                android:background="#fff"
                android:hint="College Name"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_below="@+id/cnfrmpassword"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/slider_head_text"
                />
            <Button
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Register"
                android:textColor="#fff"
                android:layout_below="@+id/institute"
                android:layout_marginTop="15dp"
                android:background="@drawable/loginbutton"
                />
            <TextView
                android:id="@+id/loginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account ? Login"
                android:textSize="12dp"
                android:textColor="@color/slider_head_text"
                android:layout_below="@id/signup"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"/>
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressBar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:elevation="1dp"
                android:indeterminateTint="@color/slider_head_text"
                />
        </RelativeLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>